<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="door">

	<select id="selectDoorList" parameterType="HashMap" resultType="HashMap">
		SELECT *
		  FROM T_DOOR
	</select>

	<select id="selectDoorInformation"  parameterType="HashMap" resultType="HashMap">
		SELECT id
		     , buildingid
             , areaid
             , floor_id
             , door_nm
             , alarm_typ
             , created_at
             , updated_at
		  FROM T_DOOR
		 WHERE id = #{id}
	</select>

	<select id="selectPermissionGroup"   parameterType="HashMap" resultType="HashMap">
		SELECT *
		  FROM T_DOOR
	</select>

	<select id="selectTerminalInformationList"  parameterType="HashMap" resultType="HashMap">
		SELECT *
		  FROM T_TERMINAL
	</select>

	<select id="selectTerminalInformation" parameterType="HashMap" resultType="HashMap">
		SELECT *
		  FROM T_TERMINAL
 	</select>
	<delete id="deleteDoor" parameterType="HashMap" >
		DELETE
		  FROM T_DOOR
		 WHERE id = 100

	</delete>

	<update id="updateDoorInformation" parameterType="HashMap">
		UPDATE T_DOOR
		   SET buildingid = ''
			 , areaid = ''
			 ,  alarm_typ = ''
			 , door_nm = ''
			 , floor_id = ''
			 , updated_at = SYSDATE
		 WHERE id = #{id}
	</update>

</mapper>